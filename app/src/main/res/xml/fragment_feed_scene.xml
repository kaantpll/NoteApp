<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="50dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_goneMarginTop="10dp"
            android:layout_marginTop="36dp"
            motion:layout_constraintHorizontal_bias="0.538"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="320dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView"
            android:id="@+id/searchView" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/searchView"
            motion:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:id="@+id/blog" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:id="@+id/textView" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/searchView"
            motion:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:id="@+id/textView3" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/searchView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:id="@+id/textView2" />
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="496dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.466"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="394dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView3"
            android:id="@+id/rv" />
    </ConstraintSet>
</MotionScene>